{
  "name": "Spaztick",
  "version": "0.1.0",
  "description": "Spaztick desktop client â€” tasks and projects with an AI assistant",
  "author": "J. P. Moore, with Cursor AI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "build:full": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "build:debug": "CSC_IDENTITY_AUTO_DISCOVERY=false DEBUG=electron-builder electron-builder",
    "build:log": "node build-with-log.js",
    "build:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.spaztick.client",
    "productName": "Spaztick",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "assets/**"
    ],
    "asar": false,
    "mac": {
      "identity": null
    },
    "forceCodeSigning": false
  }
}
